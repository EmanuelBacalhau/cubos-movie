generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String

  movies Movie[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Genre {
  id   String @id @default(cuid())
  name String @unique

  movies GenreMovie[]

  @@map("genres")
}

model GenreMovie {
  genreId String
  movieId String

  genre Genre @relation(fields: [genreId], references: [id], onDelete: Cascade)
  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@id([genreId, movieId])
  @@map("genre_movies")
}

model Movie {
  id          String   @id @default(cuid())
  title       String
  description String
  releaseDate DateTime
  duration    Int
  budget      Int
  banner      String
  trailerUrl  String
  cover       String
  votes       Int
  language    String
  revenue     Int
  profit      Int

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  genres    GenreMovie[]

  @@map("movies")
}
