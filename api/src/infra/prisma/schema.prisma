generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String

  movies Movie[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Genre {
  id   String @id @default(cuid())
  name String @unique

  movies Movie[]

  @@map("genres")
}

model Movie {
  id          String   @id @default(cuid())
  title       String
  description String
  releaseDate DateTime
  duration    Int
  budget      Int
  banner      String
  trailerUrl  String

  userId String
  user   User   @relation(fields: [userId], references: [id])

  genreId String
  genre   Genre  @relation(fields: [genreId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  emailReminders EmailReminder[]

  @@map("movies")
}

enum EmailReminderStatus {
  PENDING
  SENT
  FAILED
}

model EmailReminder {
  id      String              @id @default(cuid())
  sendAt  DateTime
  attemps Int                 @default(0)
  status  EmailReminderStatus @default(PENDING)

  movieId String
  movie   Movie  @relation(fields: [movieId], references: [id])

  createdAt DateTime @default(now())

  @@map("email_reminders")
}
